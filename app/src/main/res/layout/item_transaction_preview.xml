<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ================= DATE HEADER ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Day -->
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="27"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="center"/>

            <!-- Date text -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tvDateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hôm qua"
                    android:textSize="14sp"
                    android:textColor="#757575"/>

                <TextView
                    android:id="@+id/tvFullDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tháng 12 2025"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"/>
            </LinearLayout>

            <!-- Total of day -->
            <TextView
                android:id="@+id/tvDateTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-5,000,000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#E53935"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <!-- ================= TRANSACTION ITEM ================= -->
        <LinearLayout
            android:id="@+id/transactionRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- ICON -->
            <ImageView
                android:id="@+id/ivCategoryIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_food"
                android:layout_gravity="center"/>

            <!-- INFO -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvCategoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quà tặng và Quyên góp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>

                <TextView
                    android:id="@+id/tvNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abc"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="visible"/>
            </LinearLayout>

            <!-- AMOUNT -->
            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-5,000,000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#E53935"
                android:layout_marginStart="12dp"/>

            <!-- OPTIONAL STATUS -->
            <ImageView
                android:id="@+id/ivStatusBadge"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="4dp"
                android:visibility="gone"
                app:tint="#FF9800"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
